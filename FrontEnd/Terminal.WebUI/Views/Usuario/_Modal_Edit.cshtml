@model Terminal.WebUI.Models.UsuariosViewModel
<!-- Modal -->
<div class="modal fade" id="_Modal_Edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <form method="post" asp-controller="Usuario" asp-action="Update" id="formEdit">
            <div class="modal-content">
                <div class="modal-header" style="background-image: linear-gradient(to right, #A4F6FA, #9CB0D7 ,#4EBBC0 ) ">
                    <div class="col-2"></div>
                    <div class="col-6 text-center"><h3 class="modal-title text-black" id="exampleModalLongTitle">Editar usuario</h3></div>
                    <div class="col-2"></div>

                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="usua_ID" id="usua_IDEdit" />

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <strong><label asp-for="usua_Usuario" class="control-label text-dark"></label></strong>
                                <input asp-for="usua_Usuario" id="usua_UsuarioEdit" class="form-control text-dark" style="border-color: darkgray; border-width: 1px;" />
                                <strong><span id="lblUsuarioEditError" class="control-label text-danger" hidden="hidden">Campo 'Usuario' requerido</span></strong>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <strong><label asp-for="empl_ID" class="control-label text-dark"></label></strong>
                                <select id="empl_IDEdit" asp-for="empl_ID" asp-items="ViewBag.empl_ID"class="form-control form-select text-dark" style="border-color: darkgray; border-width: 1px;" >
                                    <option value="">-- Seleccione una opción --</option>
                                </select>
                                <strong><span id="lblEmpleadoEditError" class="control-label text-danger" hidden="hidden">Campo 'Empleado' requerido</span></strong>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <strong><label asp-for="usua_EsAdmin" class="control-label text-dark"></label></strong>
                                <input type="checkbox" asp-for="usua_EsAdmin" id="usua_EsAdminEdit" style="border-color: darkgray; border-width: 1px;" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-2"></div>
                        <div class="col-5"><button type="button" onclick="Editar()" class="btn btn-primary">Guardar</button></div>
                        <div class="col-4"><button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button></div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<script>
    //Limitar Inputs
</script>

<script>
    $(".Editar").on('click', function () {
        var cadena = $(this).data("nombre");
        var newCadena = cadena.split(',');
        var usua_IDEdit = $(this).data("id");

        $("#usua_IDEdit").val(usua_IDEdit);
        $("#usua_UsuarioEdit").val(newCadena[0]);
        $("#empl_IDEdit").val(newCadena[1]);

        $("#lblUsuarioEditError").attr('hidden', true);
        $("#lblPassEditError").attr('hidden', true);
        $("#lblEmpleadoEditError").attr('hidden', true);
        $("#_Modal_Edit").appendTo('body').modal('show');
    });


    function Editar() {
                    
        var yes = true;

        console.log("ddd");
        if ($("#usua_UsuarioEdit").val() == "") {
            $("#lblUsuarioEditError").attr('hidden', false);
            yes = false;
        }

        if ($("#usua_ClaveEdit").val() == "") {
            $("#lblPassEditError").attr('hidden', false);
            yes = false;
        }

        if ($("#empl_IDEdit").val() == "") {
            $("#lblEmpleadoEditError").attr('hidden', false);
            yes = false;
        }

        if (yes) {
            $("#lblUsuarioEditError").attr('hidden', true);
            $("#lblPassEditError").attr('hidden', true);
            $("#lblEmpleadoEditError").attr('hidden', true);
            $("#formEdit").submit();
        }
    }
</script>

