@model Terminal.WebUI.Models.ClientesModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="container container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="float-e-margins">
                    <form asp-action="Create" id="formCrear">
                        @Html.AntiForgeryToken()

                        <div class="card">
                            <div class="card-header text-center bg-cyan-400">
                                <div class="row">
                                    <div class="col-4"></div>
                                    <div class="col-4">
                                        <strong><span style="font-family: Cooper; color: indigo; font-size: xx-large;">Clientes</span></strong>
                                    </div>
                                    <div class="col-4"></div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="card">
                                    <!--<div class="card-header text-center bg-cyan-400">
                                        <div class="row">
                                            <div class="col-4">

                                            </div>
                                            <div class="col-4" style="margin-top: 10px">
                                                <strong><span style="font-family: Cooper; color: black; font-size: xx-large;">Nuevo cliente</span></strong>
                                            </div>
                                            <div class="col-4">
                                                <div class="text-end">-->
                                                    @*<img src="https://i.gifer.com/3sf.gif" style="border-radius:100px;border:3px solid black; width:50%">*@
                                                <!--</div>
                                            </div>
                                        </div>
                                    </div>-->

                                    <div class="card-body">

                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_Nombres" class="control-label text-dark" style="font-size:  larger;"></label></strong>
                                                    <input asp-for="clie_Nombres" class="form-control" style="border-color: #1C1F3B; color: #000000;"/>
                                                    <strong><span asp-validation-for="clie_Nombres" class="text-danger"></span></strong>

                                                </div>
                                            </div>

                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_Apellidos" class="control-label text-dark" style="font-size:  larger;"></label></strong>
                                                    <input asp-for="clie_Apellidos" class="form-control" style="border-color: #1C1F3B; color: #000000;"/>
                                                    <strong><span asp-validation-for="clie_Apellidos" class="text-danger"></span></strong>

                                                </div>
                                            </div>
                                        </div>
                                        <br />

                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_DNI" class="control-label text-dark" style="font-size:  larger;"></label></strong>
                                                    <input asp-for="clie_DNI" class="form-control" style="border-color: #1C1F3B; color: #000000;"/>
                                                    <strong><span asp-validation-for="clie_DNI" class="text-danger"></span></strong>

                                                </div>
                                            </div>

                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_Sexo" class="control-label text-dark" style="font-size:  larger;"></label></strong>
                                                    <input asp-for="clie_Sexo" class="form-control" style="border-color: #1C1F3B; color: #000000;"/>
                                                    <strong><span asp-validation-for="clie_Sexo" class="text-danger"></span></strong>

                                                </div>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_Telefono" class="control-label text-dark" style="font-size:  larger;"></label></strong>
                                                    <input asp-for="clie_Telefono" class="form-control" style="border-color: #1C1F3B; color: #000000;"/>
                                                    <strong><span asp-validation-for="clie_Telefono" class="text-danger"></span></strong>

                                                </div>
                                            </div>

                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_Email" class="control-label text-dark" style="font-size:  larger;"></label></strong>
                                                    <input asp-for="clie_Email" class="form-control" style="border-color: #1C1F3B; color: #000000;"/>
                                                    <strong><span asp-validation-for="clie_Email" class="text-danger"></span></strong>

                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-8"></div>
                                            <div class="col-2">
                                                <input type="submit" value="Confirmar Envio" class="btn btn-outline-success" />
                                            </div>
                                            <div class="col-2">
                                                <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

