@model Terminal.WebUI.Models.ClientesModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="container container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="float-e-margins">
                    <form asp-action="Create" id="formCrear">
                        @Html.AntiForgeryToken()

                        <div class="card border-5">
                            <div class="card-header text-center" style="background-image: linear-gradient(to right, #A4F6FA,#9CB0D7 ,#4EBBC0 ) ">
                                <div class="row">
                                    <div class="col-4">

                                    </div>
                                    <div class="col-4" style="margin-top: 10px">
                                        <h1 style="font-family: Cooper;" class="text-black">Nuevo cliente</h1>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-end">
                                            @*<img src="https://i.gifer.com/3sf.gif" style="border-radius:100px;border:3px solid black; width:50%">*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="card">

                                    <div class="card-body">

                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_Nombres" class="control-label text-dark"></label></strong>
                                                    <input asp-for="clie_Nombres" class="form-control text-dark" style="border-color: darkgray; border-width: 1px;"/>
                                                    <strong><span asp-validation-for="clie_Nombres" class="text-danger"></span></strong>

                                                </div>
                                            </div>

                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_Apellidos" class="control-label text-dark"></label></strong>
                                                    <input asp-for="clie_Apellidos" class="form-control text-dark" style="border-color: darkgray; border-width: 1px;"/>
                                                    <strong><span asp-validation-for="clie_Apellidos" class="text-danger"></span></strong>

                                                </div>
                                            </div>
                                        </div>
                                        <br />

                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_DNI" class="control-label text-dark"></label></strong>
                                                    <input asp-for="clie_DNI" class="form-control text-dark" style="border-color: darkgray; border-width: 1px;"/>
                                                    <strong><span asp-validation-for="clie_DNI" class="text-danger"></span></strong>

                                                </div>
                                            </div>

                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_Sexo" class="control-label text-dark"></label></strong><br />
                                                    <input type="radio" asp-for="clie_Sexo" value="M" class="form-check text-dark" style="border-color: darkgray; border-width: 1px;"/>    M
                                                    <input type="radio" asp-for="clie_Sexo" value="F" class="form-check text-dark" style="border-color: darkgray; border-width: 1px;"/>    F
                                                    <strong><span asp-validation-for="clie_Sexo" class="text-danger"></span></strong>
                                                </div>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_Telefono" class="control-label text-dark"></label></strong>
                                                    <input asp-for="clie_Telefono" class="form-control text-dark" style="border-color: darkgray; border-width: 1px;"/>
                                                    <strong><span asp-validation-for="clie_Telefono" class="text-danger"></span></strong>

                                                </div>
                                            </div>

                                            <div class="col-6">
                                                <div class="form-group">
                                                    <strong><label asp-for="clie_Email" class="control-label text-dark"></label></strong>
                                                    <input asp-for="clie_Email" class="form-control text-dark" style="border-color: darkgray; border-width: 1px;"/>
                                                    <strong><span asp-validation-for="clie_Email" class="text-danger"></span></strong>

                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-9"></div>
                                            <div class="col-3 text-center">
                                                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                                                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Script != null)
{
    <script>
        $(document).ready(function () {
            @Html.Raw(ViewBag.Script)
        })
    </script>

    ViewBag.Script = null;
}
