@model Terminal.WebUI.Models.RolesViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="container container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="float-e-margins">
                    <form asp-action="Create" id="formCrear">
                        @Html.AntiForgeryToken()

                        <div class="card border-5">
                            <div class="card-header text-center" style="background-image: linear-gradient(to right, #A4F6FA,#9CB0D7 ,#4EBBC0 ) ">
                                <div class="row">
                                    <div class="col-4">

                                    </div>
                                    <div class="col-4" style="margin-top: 10px">
                                        <h1 style="font-family: Cooper;" class="text-black">Editar rol</h1>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-end">
                                            @*<img src="https://i.gifer.com/3sf.gif" style="border-radius:100px;border:3px solid black; width:50%">*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="card">

                                    <div class="card-body">

                                        <div class="row">

                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label asp-for="role_ID" class="control-label"></label>
                                                    <input type="hidden" asp-for="role_ID" class="form-control" />
                                                    <span asp-validation-for="role_ID" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <strong><label asp-for="role_Descripcion" class="control-label"></label></strong>                                                    
                                                    <input asp-for="role_Descripcion" class="form-control" />
                                                    <strong><span asp-validation-for="role_Descripcion" class="text-danger"></span></strong>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-9"></div>
                                            <div class="col-3 text-center">
                                                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                                                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


