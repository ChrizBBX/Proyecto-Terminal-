@model Terminal.WebUI.Models.HorariosViewModel

<div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <form method="post" asp-controller="Horario" asp-action="Delete">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="row">
                        <div class="col-8"></div>
                        <div class="col-4"><h3 class="modal-title" id="exampleModalLongTitle" style=" color: black;"><strong>Eliminar</strong></h3></div>

                    </div>

                </div>
                <div class="modal-body text-center">
                    <input type="text" id="id" name="id" hidden />
                    <h5 class="text-black">¿Realmente desea eliminar este registro?</h5>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-2"></div>
                        <div class="col-5"><button type="submit" class="btn btn-success">Confirmar</button></div>
                        <div class="col-4"><button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function eliminar(id) {

        $("#id").val(id);

        $("#modalDelete").appendTo("body").modal('show');
        $('#modalDelete').modal({
            keyboard: false,
        });
    }
</script>