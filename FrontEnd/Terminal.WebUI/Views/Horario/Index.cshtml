@model IEnumerable<Terminal.WebUI.Models.HorariosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card border-5">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools  align-items-center">
                            <div class="row">
                                <div class="col-5"></div>
                                <div class="col-4">
                                    <strong><span style="font-family: Cooper; color: indigo; font-size: xx-large;">Horarios</span></strong>
                                </div>
                                <div class="col-3"></div>
                            </div>
                            <div class="row">
                                <div class="col-5"></div>
                                <div class="col-4 ml-1">
                                    <p><a asp-action="Create" class="btn bg-purple-700 text-light">Nuevo horario</a></p>
                                </div>
                                <div class="col-3"></div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="table-responsive-xxl">
                        <table class="table text-nowrap table-striped table-hover dataTables-example" id="DataTable">
                            <thead class="">
                                <tr class="text-dark">
                                    <th class="text-dark-200"><strong>@Html.DisplayNameFor(model => model.hora_Salida)</strong></th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Llegada)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Origen_DeptoNombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Destino_DeptoNombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_CantidadPasajerosMax)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Precio)</th>
                                    <th class="text-dark">Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="text-dark">
                                @foreach (var item in Model)
                                {
                                    <tr role="row" data-id="@item.hora_ID" class="text-dark align-text-bottom">
                                        <td class="text-dark odd">@Html.DisplayFor(modelItem => item.hora_Salida)</td>
                                        <td class="text-dark even">@Html.DisplayFor(modelItem => item.hora_Llegada)</td>
                                        <td class="text-dark odd">@Html.DisplayFor(modelItem => item.hora_Origen_DeptoNombre)</td>
                                        <td class="text-dark even">@Html.DisplayFor(modelItem => item.hora_Destino_DeptoNombre)</td>
                                        <td class="text-dark odd">@Html.DisplayFor(modelItem => item.hora_CantidadPasajerosMax)</td>
                                        <td class="text-dark even">@Html.DisplayFor(modelItem => item.hora_Precio)</td>
                                        <td class="text-dark">
                                            <a asp-action="Edit" asp-route-id="@item.hora_ID" class="btn btn-outline-primary btn-sm">Editar</a> |
                                            <a asp-action="Details" asp-route-id="@item.hora_ID" class="btn btn-outline-secondary btn-sm">Detalle</a> |
                                            <button class="btn btn-outline-danger btn-sm" id="btnEliminar" onclick="eliminar('@item.hora_ID')">Eliminar</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="">
                                <tr class="text-dark">
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Salida)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Llegada)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Origen_DeptoNombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Destino_DeptoNombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_CantidadPasajerosMax)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Precio)</th>
                                    <th class="text-dark">Acciones</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Script != null)
{
    <script>
        $(document).ready(function () {
            @Html.Raw(ViewBag.Script)
        })
    </script>

    ViewBag.Script = null;
}

@Html.Partial("_Modal_Delete", new Terminal.WebUI.Models.HorariosViewModel())