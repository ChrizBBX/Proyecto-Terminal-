@model IEnumerable<Terminal.WebUI.Models.BoletosViewModel>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h1>Detalles</h1>
    </div>
    <div class="card-body">
        @foreach (var item in Model)
        {
        <div class="row">
            <div class="form-group col-6">
                <h5>ID</h5>
                @Html.DisplayFor(modelItem => item.bole_ID)
            </div>

            <div class="form-group col-6">
                <h5>Fecha</h5>
                @Html.DisplayFor(modelItem => item.bole_Fecha)
            </div>

            <div class="form-group col-6">
                <h5>Terminal</h5>
                @Html.DisplayFor(modelItem => item.term_Nombre)
            </div>

            <div class="form-group col-6">
                <h5>Dirección</h5>
                @Html.DisplayFor(modelItem => item.bole_Fecha)
            </div>
        </div>
            <div class="form-group col-3 mt-3">
                <a asp-action="Update" asp-route-id="@item.carg_ID" class="btn btn-warning">Editar</a>
            </div>
        }
        <div style="height:20px"></div>
        <div class="card">
            <div class="card-header"><h2>Auditoria</h2></div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Accion</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><label>Creacion</label></td>
                            <td>@Html.DisplayFor(modelItem => item.carg_UsuarioCreador_Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.carg_FechaCreacion)</td>
                        </tr>
                        <tr>
                            <td>Modificacion</td>
                            <td>@Html.DisplayFor(modelItem => item.carg_UsuarioModificador_Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.carg_FechaModificacion)</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-dark btn-sm">Regresar</a>

</div>

