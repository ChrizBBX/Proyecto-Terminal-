@model IEnumerable<Terminal.WebUI.Models.BoletosViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-5"></div>
            <div class="col-3">
                <h1 style="font-family: Cooper; font-size: xx-large">Boletos</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools">
                            <div class="row">
                                <div class="col-5"></div>
                                <div class="col-3">
                                    <p><a asp-action="Create" class="btn btn-outline-info">Nuevo Registro</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="table-responsive">
                        <table class="table text-nowrap table-striped table-hover dataTables-example" id="DataTable">
                            <thead class="bg-yellow-200">
                                <tr class="text-dark">
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.bole_ID)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.bole_Fecha)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.term_Nombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.comp_Nombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.bole_clie_Nombre_Completo)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_FechaSalida)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.bole_hora_Origen_Nombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_FechaLlegada)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.bole_hora_Destino_Nombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.pago_Descripcion)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Precio)</th>
                                    <th class="text-dark">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr role="row" data-id="@item.bole_ID" class="text-dark align-text-bottom bg-yellow-200">
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.bole_ID)</td>
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.bole_Fecha)</td>
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.term_Nombre)</td>
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.comp_Nombre)</td>
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.bole_clie_Nombre_Completo)</td>
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.hora_FechaSalida)</td>
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.bole_hora_Origen_Nombre)</td>
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.hora_FechaLlegada)</td>
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.bole_hora_Destino_Nombre)</td>
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.pago_Descripcion)</td>
                                        <td class="text-dark">@Html.DisplayFor(modelItem => item.hora_Precio)</td>
                                        <td class="text-dark">
                                            <a asp-action="Details" asp-route-id="@item.hora_ID" class="btn btn-outline-info">Detalle</a> |
                                            <a asp-action="Edit" asp-route-id="@item.bole_ID" class="btn btn-outline-warning">Editar</a> |
                                            <a asp-action="Delete" asp-route-id="@item.bole_ID" class="btn btn-outline-danger">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-yellow-200">
                                <tr class="text-dark">
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.bole_ID)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.bole_Fecha)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.term_Nombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.comp_Nombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.bole_clie_Nombre_Completo)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_FechaSalida)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.bole_hora_Origen_Nombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_FechaLlegada)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.bole_hora_Destino_Nombre)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.pago_Descripcion)</th>
                                    <th class="text-dark">@Html.DisplayNameFor(model => model.hora_Precio)</th>
                                    <th class="text-dark">Acciones</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
